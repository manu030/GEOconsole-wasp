{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "curl -sSL https://get.wasp-lang.dev/installer.sh | sh && wasp build"
  },
  "deploy": {
    "startCommand": "cd .wasp/build/server && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}